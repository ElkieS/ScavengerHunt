<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back2"
    android:padding="20dp"
    tools:context="com.example.ezsmuel.scavengerhunt.ProgressPage">

    <TextView
        android:id="@+id/infoTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/infoProgress"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.81">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                android:background="@drawable/barrelbottom"
                android:id="@+id/imageView" />

            <ProgressBar
                android:id="@+id/circularProgressbar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/circular"
                android:secondaryProgress="100" />


            <TextView
                android:id="@+id/tv2"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:gravity="center"
                android:text="0%"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/circularProgressbar2"
                android:layout_marginTop="13dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="33dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/barrel" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/finishedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv2"
        android:layout_marginStart="11dp"
        android:fontFamily="cursive"
        android:text="@string/finishedTxt"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/emailBtn"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/finishedText"
        android:layout_below="@+id/finishedText"
        android:background="@drawable/scroll"
        android:fontFamily="cursive"
        android:onClick="emailPg"
        android:text="E-mail"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />
</LinearLayout>
